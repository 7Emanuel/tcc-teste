# Configurações do Banco de Dados (Prisma)
DATABASE_URL="postgresql://usuario:senha@localhost:5432/adra_db"

# Configurações de Administração
ADMIN_PASSWORD="daniel"
ADMIN_SESSION_SECRET="dev-secret"

# Configurações de Email (SMTP)
# Para Gmail: smtp.gmail.com, porta 587, usar App Password
# Para Outlook: smtp-mail.outlook.com, porta 587
# Para outros provedores, consulte a documentação
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="seu-email@gmail.com"
SMTP_PASS="sua-app-password"

# Emails que receberão notificações de novos cadastros (separados por vírgula)
ADMIN_EMAILS="admin@adra.org.br,gestor@adra.org.br"

# URLs do Sistema (para links nos emails)
FRONTEND_URL="http://localhost:5173"
ADMIN_DASHBOARD_URL="http://localhost:5173/admin"

# Configurações do Servidor
PORT="3000"